{# submit widget #}
{% block submit_widget %}
    {% spaceless %}
        <div class="ok">
            {% set type = type|default('submit') %}
            {% set submit_label = submit_label|default(null) %}
            {% set attr = {'class': 'oocss-form-input oocss-form-submit oocss-button', 'label': submit_label} %}
            {{ block('button_widget') }}
        </div>
    {% endspaceless %}
{% endblock submit_widget %}


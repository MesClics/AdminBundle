{% extends "MesClicsAdminBundle::layout.html.twig" %} 

{% block deskHeadNavRails %}
    <a href="{{ path('mesclics_admin_home') }}" class="desk-head-nav_rails--item">
        Console d'administration</a>
    >
    <a href="{{ path('mesclics_admin_clients') }}" class="desk-head-nav_rails--item">Clients</a>
    >
    <a href="{{ path('mesclics_admin_client', {'client_id': client.id}) }}" class="desk-head-nav_rails--item">{{ client.nom }}</a>
    {% if subSection is defined %}
        >
        <a href="{{ path('mesclics_admin_client_' ~ subSection, {'client_id': client.id}) }}" class="desk-head-nav_rails--item">{{ subSection }}</a>
    {% endif %}
{% endblock deskHeadNavRails %}

{% block deskMain %}
        {% include "MesClicsEspaceClientBundle:Widgets:client-nav.html.twig" %}
        {% if subSection is not defined or subSection is same as ('datas') %}
            {% with {'client': client}%}{% include "MesClicsEspaceClientBundle:Widgets:client-datas.html.twig" %}{% endwith %}
            {% with {'client': client}%}{% include "MesClicsEspaceClientBundle:Widgets:client-links.html.twig" %}{% endwith %}
        {% else %}
            {% include "MesClicsEspaceClientBundle:Admin:client.html.twig" with { 'client': client } %}
        {% endif %}
{% endblock deskMain%}
